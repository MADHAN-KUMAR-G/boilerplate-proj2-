pipeline {
    agent any

    environment {
        IMAGE_NAME = "madhan1205/boiler"
        IMAGE_TAG  = "${env.BUILD_NUMBER}"
        PORT       = "3000" 
        TF_DIR     = "boilerplate2/terraform" // Terraform folder
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/MADHAN-KUMAR-G/boilerplate-proj2-.git', 
                    credentialsId: 'github-creds'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('boilerplate2') {
                    sh 'yarn install --frozen-lockfile'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('boilerplate2') {
                    sh "docker build -f ci-cd/Dockerfile -t $IMAGE_NAME:$IMAGE_TAG ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', 
                                                  usernameVariable: 'DOCKER_USER', 
                                                  passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    sh "docker push $IMAGE_NAME:$IMAGE_TAG"
                }
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                dir(TF_DIR) {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Deploy App Container') {
            steps {
                sh "docker stop boiler || true"
                sh "docker rm boiler || true"
                sh "docker run -d -p $PORT:$PORT --name boiler $IMAGE_NAME:$IMAGE_TAG"
            }
        }
    }

    post {
        always {
            sh 'docker images'
        }
    }
}

