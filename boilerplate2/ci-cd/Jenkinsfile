pipeline {
    agent any

    environment {
        TF_DIR = "terraform"
        PORT   = "3000"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/MADHAN-KUMAR-G/boilerplate2-.git', 
                    credentialsId: 'github-creds'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('..') {
                    sh 'yarn install --frozen-lockfile'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                sh "curl http://localhost:${PORT}/health || echo 'App not reachable yet'"
            }
        }
    }

    post {
        always {
            echo 'Terraform + Docker pipeline finished'
            sh "docker ps -a"
        }
    }
}

