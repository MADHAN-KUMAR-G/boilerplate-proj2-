pipeline {
    agent any

    environment {
        DOCKER_HUB_USER = 'madhan1205'
        IMAGE_NAME = 'boiler'
        IMAGE_TAG = 'latest'
        TF_DIR = 'terraform' // folder where main.tf is located
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üì¶ Checking out repository...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'üõ†Ô∏è Building Docker image...'
                sh '''
                    docker build -t ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} -f ci-cd/Dockerfile .
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'üì§ Pushing Docker image to Docker Hub...'
                withCredentials([string(credentialsId: 'dockerhub-creds', variable: 'DOCKER_PASS')]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u ${DOCKER_HUB_USER} --password-stdin
                        docker push ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}
                        docker logout
                    '''
                }
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                script {
                    echo "üåç Running Terraform in boilerplate2/${TF_DIR} ..."
                    dir("boilerplate2/${TF_DIR}") {
                        // Ensure Terraform files exist
                        sh 'ls -la'

                        // Initialize Terraform
                        sh 'terraform init'

                        // Apply configuration (auto approve)
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Deployment successful!'
        }
        failure {
            echo '‚ùå Deployment failed!'
        }
    }
}

